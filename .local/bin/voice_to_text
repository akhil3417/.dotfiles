#!/bin/sh

ffmpeg -y -f alsa -i default -acodec pcm_s16le -ac 1 -ar 44100 -t 5 -f wav /tmp/audio.wav >/dev/null 2>&1
vosk-transcriber -m ~/myrepos/linux-assistant/extensions/vosk/vosk-model-en-us-daanzu-20200328-lgraph/ -i /tmp/audio.wav -o /tmp/transcript.txt >/dev/null 2>&1
cat /tmp/transcript.txt
